<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NavigationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigationFragment">

        <TextView
            style="@android:style/TextAppearance.Holo.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/under_fragment" />

        <Button
            android:id="@+id/under_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/under_fragment_button"/>

</LinearLayout>